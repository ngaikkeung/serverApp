<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/bootstrap.css">
    <title>Search Restaurant</title>
</head>
<body>
    <h1>Searching</h1>
    <form action="/restaurant/searchAction" method="GET">
        <input type="text" name="keyword" size="50" placeholder="Enter keyword for searching..."/>
        <button class="btn btn-primary"> Search </button>
    </form>
    <hr>
    <% if(locals.searchResultList) { %>
        <table>
            <% searchResultList.map((restaurant, index) => { %>
            <tr>
                <td><a href="/restaurant/show?_id=<%= restaurant.restaurant_id %>"><%= ++index %>. <%= restaurant.name %></a></td>
            </tr>
            <% }) %>
        </table>
    <% } %>
    <hr>
    <a href="/">Home</a>
</body>
</html>